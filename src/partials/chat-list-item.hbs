<div class="chat-list-item">
  <div class="chat-list-item__avatar avatar"></div>
  <div class="chat-list-item__content">
    <div class="chat-list-item__header">
      <span class="chat-list-item__name">{{name}}</span>
      <span class="chat-list-item__time">{{time}}</span>
    </div>
    <div class="chat-list-item__preview">
      <span class="chat-list-item__preview-text">
        {{#if preview.outgoing}}
          <b class="chat-list-item__outgoing-mark">Вы:</b>
        {{/if}}
        {{preview.text}}
      </span>
      {{#if counter}}
        <span class="chat-list-item__preview-counter">{{counter}}</span>
      {{/if}}
    </div>
  </div>
</div>