<label class="input-field">
  <span class="input-field__label-text">{{label}}</span>
  <input class="input-field__input {{#if error}}input-field__input--error{{/if}}" placeholder="{{placeholder}}"
    type="{{type}}" value="{{value}}" />
  <span class="input-field__error">{{errorMessage}}</span>
</label>